{
  "editor.defaultFormatter": "denoland.vscode-deno",
  "editor.formatOnSave": true,
  "editor.formatOnSaveMode": "file",
  "editor.codeActionsOnSave": {
    "source.fixAll": "always",
    "source.organizeImports": "always"
  },
  "[typescript]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  "[javascript]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  "deno.enable": true,
  "deno.lint": true,
  "deno.config": "./deno.jsonc",
  "deno.codeLens.implementations": true,
  "deno.codeLens.referencesAllFunctions": true,
  "deno.codeLens.references": false,
  "deno.codeLens.test": true,
  "deno.disablePaths": [
    "./services/n8n/build",
    "./services/supabase/dummy-analytics",
    "./services/pgbackup/build"
  ],
  "cSpell.words": [
    "agentflows",
    "agentic",
    "airtable",
    "browser-use-webui",
    "chatflow",
    "chatflows",
    "CLICKHOUSE",
    "deepseek",
    "dozzle",
    "ENVFILE",
    "flowise",
    "getzep",
    "graphiti",
    "illumos",
    "langchain",
    "Langfuse",
    "litellm",
    "llemonstack",
    "llmn",
    "locallm",
    "Logflare",
    "macbook",
    "MULTIAGENT",
    "nextauth",
    "ollama",
    "opencontainers",
    "openweb",
    "openwebui",
    "pgvector",
    "pooler",
    "psql",
    "qdrant",
    "rolname",
    "signoz",
    "skyvern",
    "supabase",
    "supavisor",
    "TARGETPLATFORM"
  ],
  "cSpell.ignorePaths": [
    // Default VSCode ignore paths
    "node_modules",
    ".git",
    // Your custom paths to ignore
    "*.lock",
    "*.json",
    "*.y*ml",
    ".env*",
    "test/**",
    "import/**",
    "shared/**",
    "tmp/**",
    "docs/*.md",
    "volumes/**",
    "examples/**",
    "services/**/*.js"
  ],
  "[dockercompose]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
