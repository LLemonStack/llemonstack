{
  "editor.defaultFormatter": "denoland.vscode-deno",
  "editor.formatOnSave": true,
  "editor.formatOnSaveMode": "file",
  "editor.codeActionsOnSave": {
    "source.fixAll": "always",
    "source.organizeImports": "always"
  },
  "[typescript]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  "[javascript]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  "deno.enable": true,
  "deno.lint": true,
  "deno.config": "./deno.jsonc",
  "deno.codeLens.implementations": true,
  "deno.codeLens.referencesAllFunctions": true,
  "deno.codeLens.references": true,
  "deno.codeLens.test": true,
  "cSpell.words": [
    "agentic",
    "airtable",
    "browser-use-webui",
    "chatflow",
    "chatflows",
    "deepseek",
    "ENVFILE",
    "flowise",
    "graphiti",
    "illumos",
    "langchain",
    "llemonstack",
    "macbook",
    "ollama",
    "opencontainers",
    "openweb",
    "openwebui",
    "pgvector",
    "pooler",
    "qdrant",
    "skyvern",
    "supabase",
    "TARGETPLATFORM"
  ],
  "cSpell.ignorePaths": [
    // Default VSCode ignore paths
    "node_modules",
    ".git",
    // Your custom paths to ignore
    "*.lock",
    "*.json",
    "*.y*ml",
    ".env*",
    "test/**",
    "docker/**",
    "import/**",
    "shared/**"
  ]
}
